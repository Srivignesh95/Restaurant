@model OrderDto

<div class="delete-order-container">
    <div class="delete-order-card">
        <h2 class="text-center text-danger">Confirm Order Deletion</h2>
        <p class="text-warning text-center">Are you sure you want to delete this order? This action cannot be undone.</p>

        <div class="order-info">
            <p><strong>Order ID:</strong> @Model.OrderId</p>
            <p><strong>Customer:</strong> @Model.CustomerName</p>
            <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")</p>
            <p><strong>Total Price:</strong> @Model.TotalOrderPrice.ToString("C")</p>
        </div>

        <div class="button-group">
            <form asp-action="DeleteConfirmed" asp-route-id="@Model.OrderId" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="List" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

<style>
    /* Centering and Card Layout */
    .delete-order-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f8f9fa;
    }

    .delete-order-card {
        width: 500px;
        padding: 30px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Typography */
    h2 {
        font-size: 1.8rem;
        font-weight: bold;
        color: #dc3545;
        margin-bottom: 15px;
    }

    .text-warning {
        font-size: 1.1rem;
        font-weight: 500;
        color: #ffc107;
    }

    .order-info p {
        font-size: 1.1rem;
        margin-bottom: 10px;
    }

    /* Buttons */
    .button-group {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
    }

    .btn {
        font-size: 1rem;
        padding: 12px 24px;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }
</style>
