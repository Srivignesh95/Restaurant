@model Restaurant.Models.MenuItemDto

@{
    ViewData["Title"] = "Menu Item Details";
}

<div class="menu-details-container">
    <div class="menu-details-card">
        <h2 class="text-center">Menu Item Details</h2>

        <div class="menu-info">
            <h3>@Model.MName</h3>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        </div>

        <hr class="divider" />

        <div class="button-group">
            <a asp-action="List" class="btn btn-secondary">Back to Menu List</a>
            <a asp-action="EditMenuItem" asp-route-id="@Model.MenuItemId" class="btn btn-warning">Edit</a>
            <a asp-action="DeleteMenuItem" asp-route-id="@Model.MenuItemId" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>

<style>
    /* Layout Styling */
    .menu-details-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f8f9fa;
    }

    .menu-details-card {
        width: 600px;
        padding: 30px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Typography */
    h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    h3 {
        font-size: 1.5rem;
        font-weight: 600;
        color: #007bff;
    }

    .menu-info p {
        font-size: 1rem;
        margin: 5px 0;
    }

    /* Divider */
    .divider {
        margin: 20px 0;
        border: 0;
        height: 1px;
        background: #ddd;
    }

    /* Buttons */
    .button-group {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
    }

    .btn {
        font-size: 1rem;
        padding: 10px 20px;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

        .btn-danger:hover {
            background-color: #bd2130;
        }
</style>
